<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.recipes.recipekeeper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/food_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".HomepageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewRecipesActivity" />
        <activity android:name=".NewRecipeActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ViewGroceryListActivity" />
        <activity android:name=".NewGroceryItemActivity" />
        <activity android:name=".IngredientsActivity" />
        <activity android:name=".ViewRecipeDetailsActivity" />
        <activity android:name=".MapViewActivity"></activity>
    </application>

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="@string/google_maps_key" />

</manifest>